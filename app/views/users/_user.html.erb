<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %> <!-- 特権ユーザのみに表示&&自身には削除リンクを表示しない -->
    | <%= link_to "delete", user, method: :delete,  # DELETE メソッドに偽装
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>